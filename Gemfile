source 'https://rubygems.org'

gem 'rails', '3.2.11'

gem 'sqlite3'

gem 'capistrano'
gem 'rvm-capistrano'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer'

  gem 'uglifier', '>= 1.0.3'
end

group :production do
  gem 'unicorn'
end

gem 'jquery-rails'
gem 'ember-rails', '0.8.0'
gem 'jquery_mobile_rails'
gem 'nokogiri'